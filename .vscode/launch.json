    "version": "0.2.0",
    "configurations": [
        {
            "name": "Remote debug in Docker",
            "type": "go",
            "request": "launch",
            "mode": "remote",
            "remotePath": "{workspaceRoot}",
            "port": 2345,
            "host": "127.0.0.1",
            "program": "${workspaceRoot}/cmd/proxy",
            "env": {},
            "args": [
                "--v",
                "--console"
            ],
            "showLog": true
        }
    ]
}
